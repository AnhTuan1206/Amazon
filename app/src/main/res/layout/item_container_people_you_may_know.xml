<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imageProfile"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_70sdp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_marginStart="@dimen/_18sdp"
        app:layout_constraintLeft_toRightOf="@id/imageProfile"
        app:layout_constraintBottom_toTopOf="@id/btnAddFriend"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddFriend"
        android:text="Thêm bạn bè"
        android:background="@drawable/background_btn_add_friend"
        android:layout_marginStart="@dimen/_18sdp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/imageProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_35sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintLeft_toRightOf="@id/btnAddFriend"
        android:background="@drawable/background_btn_remove"
        android:text="Gỡ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_35sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
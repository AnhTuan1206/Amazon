<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".activities.FriendActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/background_btn_white"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content">

            <SearchView
                android:id="@+id/searchView"
                android:queryHint="Tìm kiếm bạn bè"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--            <androidx.appcompat.widget.AppCompatImageView-->
<!--                android:id="@+id/btnSearchFriend"-->
<!--                android:layout_marginStart="@dimen/_8sdp"-->
<!--                android:background="@drawable/ic_search_bigsize"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

<!--            <EditText-->
<!--                android:id="@+id/etSearchFriend"-->
<!--                android:layout_width="@dimen/_263sdp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@null"-->
<!--                android:contentDescription="@string/search_friend" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCountFriend"
                android:textSize="@dimen/_18sdp"
                android:layout_margin="@dimen/_9sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvQuanLy"
                android:layout_marginTop="@dimen/_9sdp"
                android:text="@string/qu_n_l"
                android:textColor="@color/nameApp"
                android:layout_marginLeft="@dimen/_240sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/recyclerFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>
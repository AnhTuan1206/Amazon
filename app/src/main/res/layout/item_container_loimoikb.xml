<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAccept"
        app:layout_constraintLeft_toRightOf="@id/imageProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@drawable/background_btn_blue"
        android:text="Chấp nhận"
        android:textColor="@color/white"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_35sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRemove"
        app:layout_constraintLeft_toRightOf="@id/btnAccept"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@drawable/background_btn_white"
        android:text="Xoá"
        android:textColor="@color/black"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_35sdp"/>

    <TextView
        android:id="@+id/tvThongBao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageProfile"
        android:textSize="@dimen/_18ssp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>